
 <section class="course_info">
    <div class="col-md-2">
      <%= image_tag("kit.jpg", alt: "Kit Logo", class: "img-responsive") %>
        <p><b>Coordinator name: <%= @users.find_by(:id => c.user_id).name %></b></p >
    </div>
    <div class="jumbotron col-md-6">
      <h4><a href=' '><li><%= link_to "#{c.name}", course_path(:id => c.random_id) %></li></a ></h4>
      <h5>Prerequisite: <%= c.prerequisite %></h5>
      <h5>Category: <%= @categories.find_by(:id => c.category_id).name %></h5>
      <h5>Location: <%= @locations.find_by(:id => c.location_id).name %></h5>
      <h6>Created: <%= c.created_at.strftime("%Y/%m/%d")%></h6>
      <h5 style="text-align: right">
       <%= link_to upvote_course_path(:id => c.random_id), method: :post do %>
       <span class="glyphicon glyphicon-thumbs-up"><%= c.votes.count %> &nbsp;
      <% end %>
        <%= link_to downvote_course_path(:id => c.random_id), method: :post do %> 
        <span class="glyphicon glyphicon-thumbs-down"><%= c.numbers.count %></a ></span>
        <% end %>
      </h5>
    </div>
  </section>