<h1><%= @course.name %></h1>
<hr>
  <section class="course_info">
    <div class="col-md-4">
      <h5>Prerequisite: <%= @course.prerequisite %></h5>
    </div>
    <div class="col-md-2">
    
      <% if logged_in? &&  @course.user_id === current_user.id  %>
        <%= link_to "Edit Course", edit_course_path(:id => @course.random_id), class: "btn btn-success" %>
      <% end %>
    </div>
  </section>

  <section class="course_info">
    <div class="jumbotron col-md-6">
    
      <h5>Category: <%= @categories.find_by(:id => @course.category_id).name %></h5>
      <h5>Location: <%=@locations.find_by(:id => @course.location_id).name %></h5>
      <h5>description: <%= @course.description %></h5>
    </div>
    <% if logged_in?  %>
    <div class="col-md-3">
        <%= image_tag("kit.jpg", alt: "Kit Logo", class: "img-responsive") %>
        <p><b>Coordinator name: <%= current_user.name %></b></p>
    </div>
    <% end %>
  </section>

   <div>
     <%= link_to "Return to Courses List", courses_path, class: "btn btn-info" %>
   </div>
 
